{% macro render(elementId = null, elementPartId = null, imageSrcLinkedIn = null, imageSrcTwitter = null, imageSrcYouTube = null, imageSrcFacebook = null, imageSrcInstagram = null, imageSrcPinterest = null, imageSrcSnapchat = null, imageSrcKununu = null, marginBottom = null, iconHeight = null) %}{% apply spaceless %}
    {% deprecated 'The usage of "element.render(...)" is deprecated, use "include ... with {...}" instead. For detailed information, visit: https://github.com/bsi-software/bsi-cx-design-master-template-email/blob/main/MIGRATION_GUIDE.md"' %}
    {% include './template.twig' %}
{% endapply %}{% endmacro %}

{% apply spaceless %}
    {% set socialMediaElementId = elementId ?: 'social-media-follow-rbGrIr' %}
    {% set socialMediaElementPartId = elementPartId ?: 'social-media-follow-part-2PtqkD' %}

    {% set defaultSocialMedia = [{
      name: 'LinkedIn',
      img: bsi_cx_asset('../../../../static/linkedin.png'),
      url: 'https://www.linkedin.com/'
    }, {
      name: 'Twitter',
      img: bsi_cx_asset('../../../../static/twitter.png'),
      url: 'https://www.twitter.com/'
    }, {
      name: 'YouTube',
      img: bsi_cx_asset('../../../../static/youtube.png'),
      url: 'https://www.youtube.com/'
    }, {
      name: 'Facebook',
      img: bsi_cx_asset('../../../../static/facebook.png'),
      url: 'https://www.facebook.com/'
    }, {
      name: 'Instagram',
      img: bsi_cx_asset('../../../../static/instagram.png'),
      url: 'https://www.instagram.com/'
    }, {
      name: 'Pinterest',
      img: bsi_cx_asset('../../../../static/pinterest.png'),
      url: 'https://www.pinterest.com/'
    }, {
      name: 'Snapchat',
      img: bsi_cx_asset('../../../../static/snapchat.png'),
      url: 'https://www.snapchat.com/'
    }, {
      name: 'kununu',
      img: bsi_cx_asset('../../../../static/kununu.png'),
      url: 'https://www.kununu.com/'
    }] %}
    {% set socialMediaFollowList = (socialMediaFollow ?: properties.socialMediaFollow) ?: defaultSocialMedia %}
    {% set socialMediaMarginBottom = (marginBottom ?: properties.baseMarginBottom) ?: 12 %}
    {% set socialMediaIconHeight = (iconHeight ?: properties.socialMediaIconHeight) ?: 20 %}

    <table data-bsi-element="{{ socialMediaElementId }}" class="bsi-social-media" width="265" align="center" border="0" cellspacing="0" cellpadding="0">
        <tr data-bsi-element-part="{{ socialMediaElementPartId }}" style="width: 265px;" align="left" valign="top">

            {% for entry in socialMediaFollowList %}
                {% set imgUrl = entry.img.externalRef ? entry.img.externalRef : entry.img %}
                <td data-bsi-social-follow="{{ entry.name }}" align="left" style="float: left; padding-right: 10px;">
                    <a href="{{ entry.url }}" target="_blank" style="text-decoration: none;">
                        <img src="{{ imgUrl }}" height="{{ socialMediaIconHeight }}" alt="{{ entry.name }}" border="0" style="display: block; width: auto;"/>
                    </a>
                </td>
            {% endfor %}
        </tr>
        <tr>
            <td height="{{ socialMediaMarginBottom }}" style="height: {{ socialMediaMarginBottom }}px;">&nbsp;</td>
        </tr>
    </table>
{% endapply %}