    {% set marginBottom = (marginBottom ?: properties.baseMarginBottom) ?: 12 %}
    {% set text = text ?: bsi_cx_lorem(75) %}

    <div data-bsi-element="{{ elementId }}" data-bsi-element-part="{{ textPartId }}" style="text-align: left; margin-top: 0; margin-bottom: {{ marginBottom }}px; font-size: {{ fontSize }}px; line-height: {{ lineHeight }}px; color: {{ textColor }}; font-family: {{ fontFamily }};">
        <p>{{ text }}</p>
    </div>
{% endapply %}