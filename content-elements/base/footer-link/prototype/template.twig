{% macro render(elementId = null, elementPartId = null, linkText = null, linkURL = null, color = null, fontFamily = null, fontSize = null, paddingBottom = null) %}{% apply spaceless %}
    {% deprecated 'The usage of "element.render(...)" is deprecated, use "include ... with {...}" instead. For detailed information, visit: https://github.com/bsi-software/bsi-cx-design-master-template-email/blob/main/MIGRATION_GUIDE.md"' %}
    {% include './template.twig' %}
{% endapply %}{% endmacro %}

{% apply spaceless %}
    {% set footerLinkElementId = elementId ?: 'footer-link-vc1KI1' %}
    {% set footerLinkElementPartId = elementPartId ?: 'footer-link-part-gN7hhF' %}
    {% set footerLinkText = (linkText ?: properties.addressEmailText) ?: 'info@example.com' %}
    {% set footerLinkURL = (linkURL ?: properties.addressEmailURL) ?: 'mailto:info@example.com' %}
    {% set footerLinkColor = (color ?: properties.footerTextColor) ?: '#ffffff' %}
    {% set footerLinkFontFamily = (fontFamily ?: properties.baseFontFamily) ?: 'Open Sans, Segoe UI, Apple SD Gothic Neo, Lucida Grande, Lucida Sans Unicode, sansâ€‘serif' %}
    {% set footerLinkFontSize = (fontSize ?: properties.baseFontSize) ?: 14 %}
    {% set footerLinkPaddingBottom = (paddingBottom ?: properties.footerLinkPaddingBottom) ?: 10 %}

    <div data-bsi-element="{{ footerLinkElementId }}" data-bsi-element-part="{{ footerLinkElementPartId }}" style="padding-bottom: {{ footerLinkPaddingBottom }}px; min-width: 196px;">
        <a href="{{ url ?: footerLinkURL }}" style="font-family: {{ footerLinkFontFamily }}; font-size: {{ footerLinkFontSize }}px;  line-height: {{ footerLinkFontSize }}px; color: {{ footerLinkColor }}; text-decoration: none;">{{ text ?: footerLinkText }}</a>
    </div>
{% endapply %}